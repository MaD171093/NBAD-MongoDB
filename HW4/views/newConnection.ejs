<!DOCTYPE html>
<html lang="en" dir="ltr">
  <% include partials/head.ejs %>

  <body>

    <% include partials/header.ejs {user:user} %>

    <form class="content-form" action="/newConnection" method="post">
      <div class="row align-center">
        <div class="three columns">
          <label class="align-right" for="topic">Club Name</label>
        </div>
        <div class="five columns">
          <input class="u-full-width" type="text" placeholder="topic" id="topic" name="topic">
        </div>
        <div class="four columns"></div>
      </div>

      <div class="row align-center">
        <div class="three columns">
          <label class="align-right" for="name">Event Name</label>
        </div>
        <div class="five columns">
          <input class="u-full-width" type="text" placeholder="name" id="name" name="name">
        </div>
        <div class="four columns"></div>
      </div>

      <div class="row align-center">
        <div class="three columns">
          <label class="align-right" for="details">Details</label>
        </div>
        <div class="five columns">
          <textarea class="u-full-width" placeholder="description â€¦" id="details" name="details"></textarea>
        </div>
        <div class="four columns"></div>
      </div>

      <div class="row align-center">
        <div class="three columns">
          <label class="align-right" for="location">Where</label>
        </div>
        <div class="five columns">
          <input class="u-full-width" type="text" placeholder="location" id="location" name="location">
        </div>
        <div class="four columns"></div>
      </div>

      <div class="row align-center">
        <div class="three columns">
          <label class="align-right" for="date">Date</label>
        </div>
        <div class="five columns">
          <input class="u-full-width" type="text" id="date" placeholder="Thursday; 19th October 2019" name="date">
        </div>
        <div class="four columns"></div>
      </div>

      <div class="row align-center">
        <div class="three columns">
          <label class="align-right" for="time">Time</label>
        </div>
        <div class="five columns">
          <input class="u-full-width" type="text" id="time" placeholder="10:00 am - 12:00 pm" name="time">
        </div>
        <div class="four columns"></div>
      </div>

      <div class="row align-center">
        <div class="six columns pull-right">
          <input class="button-primary" type="submit" value="create connection">
        </div>
        <div class="six columns"> </div>
      </div>

    </form>

    <% include partials/footer.ejs %>

  </body>
</html>
